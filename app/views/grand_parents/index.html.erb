<%= render 'shared/banner' %>
<div class="home-container">

  <div class="container mt-5">
    <div class="row">
      <% @grand_parents.each do |gp| %>
        <div class="col-xs-4 col-md-4">
          <div class="card-gp m-3">
            <% if gp.photos.attached? %>
              <% gp.photos.each do |photo| %>
                <%= cl_image_tag photo.key %>
              <% end %>
            <% else %>
              <%= image_tag "https://image.freepik.com/vecteurs-libre/conception-grands-parents_25030-23616.jpg" %>
            <% end %>

            <div class="card-gp-infos">
              <%= link_to grand_parent_path(gp) do  %>
                <h2><%= gp.first_name %> <%= gp.last_name %></h2>
                <p><%= gp.description %></p>
                <h2 class="card-gp-pricing"><%= gp.price %>â‚¬</h2>

                <%= cl_image_tag gp.user.avatar.key, class: "card-gp-user avatar-bordered" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div id="map"
   style="width: 50%;
   height: 90vh;"
   data-markers="<%= @markers.to_json %>"
   data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>


