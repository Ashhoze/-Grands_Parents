<div class="box">
  <div class="add-image">
    <h1 class="add-title">Ajoute Ton Grand Parent</h1>
    </div>
  <div class="add-form container col-sm-8 col-lg-4">
      <%= simple_form_for (@grand_parent) do |f| %>
        <div class="row">
          <div class="col">
            <%= f.input :first_name, label: false, placeholder: "PrÃ©nom"%>
          </div>
          <div class="col">
            <%= f.input :last_name, label: false, placeholder: "Nom" %>
          </div>
        </div>

        <div class="row">
          <div class="col">
            <%= f.input :age, label: false, placeholder: "Age" %>
          </div>
          <div class="col">
            <%= f.input :hobby, label: false, placeholder: "Loisirs" %>
          </div>
          <div class="col">
            <%= f.input :price, label: false, placeholder: "Prix" %>
          </div>
        </div>

        <%= f.input :city, label: false, placeholder: "Adresse" %>
        <%= f.input :description, label: false, placeholder: "Description"  %>
          <div class="new-form-buttons">
          <label class="btn btn-outline-info" style="style: width: 100%">
            Ajouter une photo <em> (10.5 Mb max.)</em>
            <span style="display:none;">
              <%= f.input :photo, as: :file, name: 'Photo' %>
            </span>
          </label>
          <%= f.submit "Proposer", class: "btn btn-primary", class: "submit-new"  %>
        </div>
      <% end %>
  </div>
</div>
