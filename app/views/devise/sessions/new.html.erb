<div class="box">
  <div class="form container col-sm-8 col-lg-4">
    <h2>Connexion</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                label: "Email",
                required: false,
                autofocus: true,
                label_html: { :class => "black_text" },
                input_html: { autocomplete: "email" }, class: "inputBox" %>
          <%= f.input :password,
                label: "Mot de passe",
                required: false,
                label_html: { :class => "black_text" },
                input_html: { autocomplete: "current-password" }, class: "inputBox" %>
          <div class="submit d-flex justify-content-center">
            <%= f.input :remember_me, label: "Se souvenir de moi",
                label_html: { :class => "black_text" },
                as: :boolean if devise_mapping.rememberable?
                %>
          </div>
        </div>

  <div class="form-actions d-flex justify-content-center">
    <%= f.button :submit, "Connexion", class: "our-button" %>
  </div>
    <% end %>
<%= render "devise/shared/links" %>
  </div>
</div>



